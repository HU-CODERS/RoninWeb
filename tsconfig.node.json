{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Emit settings */
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "composite": true
}
